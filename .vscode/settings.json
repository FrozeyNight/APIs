     // --- CMake configuration ---
      "cmake.configureOnOpen": true,
      "cmake.generator": "Ninja", // Use Ninja on all platforms
      "cmake.buildDirectory": "${workspaceFolder}/build",
      "cmake.sourceDirectory": "${workspaceFolder}",

      // Automatically pick the best compiler
      // Linux → /usr/bin/g++
      // Windows → MSVC (from Visual Studio or Build Tools)
      "C_Cpp.default.compilerPath": "${command:cmake.getActiveKitCompilerPath}",

      // --- IntelliSense integration ---
      "C_Cpp.default.configurationProvider": "ms-vscode.cmake-tools",
      "C_Cpp.default.compileCommands": "${workspaceFolder}/build/compile_commands.json",
      "C_Cpp.default.cppStandard": "c++20",
      "C_Cpp.default.intelliSenseMode": "linux-gcc-x64",

      // --- Quality of life ---
      "cmake.parallelJobs": 4,
      "cmake.loggingLevel": "error",
      "cmake.showOptionsMovedNotification": false,

      // --- Optional: auto-configure when you switch branches or pull ---
      "cmake.configureOnEdit": true,
      "cmake.configureOnBuild": true

  
}